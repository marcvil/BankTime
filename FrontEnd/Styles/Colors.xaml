<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:BankTimeApp">

    <Color x:Key="Background">#121212</Color>
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource Background}" />

    <Color x:Key="ForegroundDark">#e3e3e3</Color>
    <SolidColorBrush x:Key="ForegroundDarkBrush" Color="{StaticResource ForegroundDark}" />

    <Color x:Key="ForegroundLight">#f0eded</Color>
    <SolidColorBrush x:Key="ForegroundLightBrush" Color="{StaticResource ForegroundLight}" />

</ResourceDictionary>