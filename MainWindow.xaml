<Window x:Class="BankTimeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BankTimeApp"
        xmlns:controls="clr-namespace:BankTimeApp.FrontEnd.Pages"
        xmlns:local1="clr-namespace:BankTimeApp.FrontEnd.Converters"
        xmlns:local2="clr-namespace:BankTimeApp.FrontEnd.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1420"
          ResizeMode="NoResize" WindowStyle="None"  WindowStartupLocation="CenterScreen" WindowState="Normal">

    <Grid Background="#363636">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="110"/>

                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Source="\FrontEnd\Resources\Images\logoescola.png" Height="100" Margin="20 0 0 0"></Image>
                <Grid Grid.Column="1">
                    <TextBlock Text=".Net Tareas" Style="{StaticResource HeaderText}" FontSize="40" Margin="0 0 20 0"/>


                </Grid>

            </Grid>
            <Grid Grid.Row="1" Grid.ColumnSpan="1" Background="{StaticResource ForegroundDarkBrush}" Opacity="0.2">

            </Grid>
            <Grid Grid.Row="2">
                <StackPanel >
                    <Grid Margin="20 20 0 20" Visibility="{Binding bancoTiempoButtonVisibilityVM, Converter={local1:BooleanConverter}}" >
                        <Button Style="{StaticResource Hover}"  Content="Banco de Tareas"  Height="80" FontSize="30" HorizontalAlignment="Left" Margin="100 0 0 0" Command="{Binding ChangeToBancoTiempoCommand}"  />
                        <materialDesign:PackIcon Kind="NewspaperVariantOutline" Height="40"  Width="40" Foreground="NavajoWhite" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"/>
                    </Grid>
                    <Grid Margin="20 20 0 20" Visibility="{Binding misTareasButtonVisibilityVM, Converter={local1:BooleanConverter}}" >
                        <Button Style="{StaticResource Hover}" Content="Mis Tareas"  Height="80" FontSize="30" HorizontalAlignment="Left" Margin="100 0 0 0"  Command="{Binding ChangeToMisTareasCommand}" />
                        <materialDesign:PackIcon Kind="Person" Height="40"  Width="40" Foreground="red" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"/>
                    </Grid>
                  
                    

                </StackPanel>


            </Grid>
        </Grid>


        <Grid Grid.Column="1" Background="{StaticResource ForegroundDarkBrush}" Opacity="0.2">

        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid>
                <TextBlock Style="{StaticResource HeaderText}" Text="Banco del Tiempo" FontSize="40" HorizontalAlignment="Left"  Margin="40 0 0 0"/>
                <Button Style="{StaticResource HoverIcon}"  Click="Button_Click" Width="100"  Height="100" HorizontalAlignment="Right" Margin="0 0 40 0" BorderBrush="Transparent"  />
                <materialDesign:PackIcon Kind="Power" Width="60"  Height="60" HorizontalAlignment="Right" Margin="0 0 60 0" VerticalAlignment="Center" Foreground="White"/>
            </Grid>
            <Grid Grid.Row="1" Grid.ColumnSpan="1" Background="{StaticResource ForegroundDarkBrush}" Opacity="0.2">

            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                  
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="240"/>
                        <RowDefinition Height="90"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock Text="Bienvenido a .Net Tareas" Style="{StaticResource HeaderText}"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Margin="0 0 0 0"/>
                    </Grid>
                    <Grid Grid.Row="1">
                       
                        <TextBox
                  Text="{Binding userNameLoginVM}"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                            Foreground="white"
                    materialDesign:HintAssist.Hint="Username"
                  VerticalAlignment="Top" Height="38" Margin="213,78,213,0" RenderTransformOrigin="0.5,0.5" >
                        </TextBox>

                        <TextBox
                  Text="{Binding passwordLoginVM}"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" ToolTip="Introduce el nombre de usuario" 
                  materialDesign:HintAssist.Hint="Password"
                            Foreground="White"
                  VerticalAlignment="Top" Height="38"  Margin="213,129,213,0" RenderTransformOrigin="0.5,0.5" >
                        </TextBox>
                        <Button  Content="Login" Style="{StaticResource MaterialDesignPaperLightButton}" Background="Green" Height="44" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top"  Command="{Binding LoginButtonCommand}" Margin="0,188,0,0" />

                    </Grid>

                    <Grid Grid.Row="2">
                        <TextBlock Text="Si no tienes cuenta puedes registrarte" Style="{StaticResource SubHeaderText}"   HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="0 0 0 0"/>
                    </Grid>
                    <Grid Grid.Row="3">

                        <TextBox
                   Text="{Binding userNameRegisterVM}"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                            Foreground="white"
                    materialDesign:HintAssist.Hint="Username"
                  VerticalAlignment="Top" Height="38" Margin="213,78,213,0" RenderTransformOrigin="0.5,0.5" >
                        </TextBox>

                        <TextBox
                  Text="{Binding passwordRegisterVM}"
                  Style="{StaticResource MaterialDesignFloatingHintTextBox}" ToolTip="Introduce el nombre de usuario" 
                  materialDesign:HintAssist.Hint="Password"
                            Foreground="White"
                  VerticalAlignment="Top" Height="38"  Margin="213,129,213,0" RenderTransformOrigin="0.5,0.5" >
                        </TextBox>
                        <Button  Content="Registrar Cuenta" Style="{StaticResource MaterialDesignPaperLightButton}" Background="Green" Height="44" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top"  Command="{Binding LoginButtonCommand}" Margin="0,188,0,0" />

                    </Grid>
                </Grid>
                <ContentControl x:Name="contentControl" Content="{Binding currentMainUserControl,Converter={local1:ApplicationUserControlValueConverter}}" />
            </Grid>



        </Grid>
           
       
    </Grid>
</Window>
